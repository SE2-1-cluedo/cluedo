<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif"
        android:text="Player choice"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/personSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/personSelect"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="37dp"
        android:fontFamily="sans-serif"
        android:text="selected person"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/submit_Accusation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weaponSelect" />

    <TextView
        android:id="@+id/weaponSelect"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="sans-serif"
        android:text="selected weapon"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/submit_Suspicion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/submit_Accusation"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/custom_button"
        android:text="Accusation"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinner_weapon"
        android:layout_width="266dp"
        android:layout_height="48dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="56dp"
        android:contentDescription="@string/Selection_weapon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="319dp"
        android:layout_height="34dp"
        android:layout_marginStart="179dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="186dp"
        android:fontFamily="sans-serif"
        android:text="Where? Who? With?"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="266dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="sans-serif"
        android:text="Choose a weapon"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentRoom" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="321dp"
        android:layout_height="28dp"
        android:layout_marginStart="178dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="184dp"
        android:fontFamily="sans-serif"
        android:text="The room"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/currentRoom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="266dp"
        android:layout_height="30dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="Choose a person"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentRoom" />

    <TextView
        android:id="@+id/currentRoom"
        android:layout_width="321dp"
        android:layout_height="28dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/submit_Suspicion"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginStart="149dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/custom_button"
        android:text="Suspicion"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner_person"
        android:layout_width="266dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/Selection_suspicious"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>
