<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overall"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_closeNotepad"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_marginStart="600dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button"
        android:text="@string/back_to_map"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/tableHeaderScrollContent"
        android:layout_width="821dp"
        android:layout_height="41dp"

        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/col2"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:text="NOTEPAD"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#689F38"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="546dp"
            tools:layout_editor_absoluteY="97dp" />

        <TextView
            android:id="@+id/col1"
            android:layout_width="249dp"
            android:layout_height="match_parent"
            android:text="Checked?"
            android:textAlignment="textStart"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#689F38"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="318dp"
            tools:layout_editor_absoluteY="97dp" />

        <TextView
            android:id="@+id/col0"
            android:layout_width="312dp"
            android:layout_height="36dp"
            android:text="Notes"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#689F38"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="97dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listviewNotepad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableHeaderScrollContent"
        app:layout_constraintVertical_bias="0.253">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>